class BallDroppingExample extends Example
  setup: =>
    @x = 10
    @y = 60
    @radius = 10

    @xSpeed = 2
    @ySpeed = 10

  draw: (ctx) =>
    # Clean up the old frame
    ctx.drawRect 0, 0, ctx.width, ctx.height

    # Updates the x and y position each frame
    @x += @xSpeed
    @y += @ySpeed

    # Draw our circle
    ctx.arc(@x, @y, @radius, 0, Math.PI * 2, true)
    do ctx.fill
