class Example
  constructor: ->
    document.addEventListener "mousemove", @mousemove, false
    @time = 0
    @mouseX = @mouseY = 0

  render: (@canvas) ->
    ctx = @canvas.getContext("2d")
    do @setup
    setInterval (=> @draw(ctx)), 30

  setup: ->
  draw: (ctx) ->

  mouseMoved: (event) =>
    @mouseX = event.mouseX
    @mouseY = event.mouseY
